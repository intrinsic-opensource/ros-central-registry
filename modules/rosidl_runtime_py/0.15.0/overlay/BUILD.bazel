load("@rosdistro//bazel/python:macros.bzl", "py_pytest")
load("@rules_python//python:defs.bzl", "py_library", "py_binary")
load("@rules_python//python/entry_points:py_console_script_binary.bzl", "py_console_script_binary")

# This is the python library that does the bulk of the work for converting
# the .msg, .srv, .action files to the generic .idl representation.
py_library(
    name = "rosidl_runtime_py",
    srcs = glob(["rosidl_runtime_py/**/*.py"]),
    deps = [
        "@ament_index_python",
        "@rosidl_parser",
        "@rosdistro//bazel/python:numpy",
        "@rosdistro//bazel/python:pyyaml",
    ],
)

# This makes the setup script executable, and ensures that eny downstream
# consumers of this script bring in the correct dependencies.
py_binary(
    name = "setup",
    srcs = ["setup.py"],
    deps = ["@rosdistro//bazel/python:setuptools"],
    visibility = ["//visibility:private"],
)

# All functional tests.
[
    py_pytest(
        name = test,
        srcs = ["test/rosidl_runtime_py/{}.py".format(test)],
        python_version = "PY3",
        deps = [":rosidl_runtime_py"],
    )
    for test in [
        "test_convert",
        "test_get_interfaces",
        "test_import_message",
        "test_set_message",
        "test_set_utilities",
    ]
]
