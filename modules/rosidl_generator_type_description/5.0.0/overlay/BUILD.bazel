# Imports

load("@rosdistro//bazel/python:macros.bzl", "py_pytest")
load("@rules_python//python:defs.bzl", "py_library", "py_binary")

package(default_visibility = ["//visibility:public"])

# Export the aspect for converting ROS interfaces to IDLs.
exports_files(["defs.bzl"])

# We have to wrap the data to rewrite the runfile symlinks to a layout that
# is expected by the code. Ie, share/<module_name>/resources...
# We need these templates at IDL generation time/
filegroup(
    name = "templates",
    srcs = glob(["resource/**"]),
)

# This is the python library that does the bulk of the work for converting
# the .msg, .srv, .action files to the generic .idl representation.
py_library(
    name = "rosidl_generator_type_description",
    srcs = glob(["rosidl_generator_type_description/**/*.py"]),
    deps = [
        "@ament_index_python",
        "@rosidl_cli",
        "@rosidl_parser",
    ],
)

# The py_binary target does not accept files without the .py or .py3 suffix.
# This rule simply renames the file to make it usable.
genrule(
    name = "rosidl_generator_rename",
    srcs = ["bin/rosidl_generator_type_description"],
    outs = ["bin/rosidl_generator_type_description.py"],
    cmd = "cp $(location :bin/rosidl_generator_type_description) $(location :bin/rosidl_generator_type_description.py)",
)

# This makes the setup script executable, and ensures that eny downstream
# consumers of this script bring in the correct dependencies.
py_binary(
    name = "rosidl_generator",
    srcs = [":bin/rosidl_generator_type_description.py"],
    main = ":bin/rosidl_generator_type_description.py",
    python_version = "PY3",
    deps = [":rosidl_generator_type_description"],
)

# All functional tests.
py_pytest(
    name = "test_serializers",
    srcs = ["test/test_serializers.py"],
    python_version = "PY3",
    deps = [":rosidl_generator_type_description"],
    size = "small"
)