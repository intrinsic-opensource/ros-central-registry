# Imports

load("@rosdistro//bazel/python:macros.bzl", "py_pytest")
load("@rules_python//python:defs.bzl", "py_library", "py_binary")

package(default_visibility = ["//visibility:public"])

# This is the python library that does the bulk of the work for converting
# the .msg, .srv, .action files to the generic .idl representation.
py_library(
    name = "rosidl_parser",
    srcs = glob(["rosidl_parser/**/*.py"]),
    data = glob([
        "rosidl_parser/**/*.lark",
        "rosidl_parser/**/*.typed"
    ]),
    deps = ["@rosdistro//bazel/python:lark"],
)

# All functional tests.
py_pytest(
    name = "test_parser",
    srcs = ["test/test_parser.py"],
    python_version = "PY3",
    data = glob(["test/**/*.idl"]),
    deps = [":rosidl_parser"],
)
