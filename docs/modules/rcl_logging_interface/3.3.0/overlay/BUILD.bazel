load("@rules_cc//cc:defs.bzl", "cc_library", "cc_test")

package(default_visibility = ["//visibility:public"])

# Libraries

cc_library(
    name = "rcl_logging_interface",
    srcs = glob(["src/**/*.c"]),
    hdrs = glob(["include/**/*.h"]),
    includes = ["include"],
    local_defines = ["ROS_PACKAGE_NAME=\\\"rcl_logging_interface\\\""],
    deps = [
        "@rcutils",
        "@rcpputils",
    ],
)

# Tests

cc_test(
    name = "test_get_logging_directory",
    srcs = [
        "test/test_get_logging_directory.cpp",
    ],
    deps = [
        "@googletest//:gtest",
        "@googletest//:gtest_main",
        ":rcl_logging_interface",
    ],
    local_defines = ["ROS_PACKAGE_NAME=\\\"rcl_logging_interface\\\""],
    timeout = "short"
)
